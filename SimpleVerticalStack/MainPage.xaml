<Page
    x:Class="SimpleVerticalStack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleVerticalStack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource AppBarBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Right-Aligned Text"
                       FontSize="48"
                       HorizontalAlignment="Right" />
            <Image Source="Assets/SplashScreen.scale-200.png"
                   Height="500"
                   Width="500" />
            <TextBlock Text="Figure 1. SplashScreen"
                       FontSize="24"
                       HorizontalAlignment="Center" />
            <Ellipse Stroke="Red"
                     StrokeThickness="4"
                     Height="48" />
            <TextBlock Text="Left-Aligned Text"
                       FontSize="36"
                       HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</Page>